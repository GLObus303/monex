{
  "name": "monex",
  "description": "A modern forex application that displays daily CNB (Czech National Bank) exchange rates, built with React, TypeScript and Vite.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "vite --port $PORT",
    "vdev": "vercel dev --local-config ./vercel-dev.json",
    "build": "tsc -b && vite build",
    "lint": "eslint --ignore-path .gitignore 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --ignore-path .gitignore --write '**/*.{js,jsx,ts,tsx}'",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:e2e": "node --version && playwright test --config e2e-playwright/playwright.config.js",
    "test:e2e:ui": "node --version && playwright test --ui --config e2e-playwright/playwright.config.js",
    "lint:e2e": "eslint e2e-playwright/**/*.{js,ts} --fix",
    "format:e2e": "prettier --write e2e-playwright/**/*.{js,ts}",
    "prepare": "husky"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@tanstack/query-async-storage-persister": "^5.90.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-persist-client": "^5.90.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@types/styled-components": "^5.1.34",
    "@vercel/node": "^5.3.24",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.39.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts?(x)}": ["yarn lint"],
    "src/**/*.{js,ts,tsx}": ["yarn format"],
    "e2e-playwright/**/*.{js,ts}": ["yarn lint:e2e", "yarn format:e2e"]
  }
}
